[commands]
update_cmd = security

update_messages = yes

download_updates = yes

apply_updates = yes

random_sleep = 360


[emitters]
system_name = {{ inventory_hostname }}

emit_via = email

output_width = 80


[email]
email_from = yum-cron@localhost

email_to = infotech@iwsinc.com

email_host = localhost


[groups]
group_list = None

group_package_types = mandatory, default

[base]

debuglevel = -2

mdpolicy = group:main

exclude = kernel*

